{
    "compilerOptions": {
        "target": "es2019",
        "allowJs": true,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
    },
    "include": [
      "src/**/*"
    ]
}